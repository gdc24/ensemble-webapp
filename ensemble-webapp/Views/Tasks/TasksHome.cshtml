@model ensemble_webapp.ViewModels.TasksHomeVM
@{
    ViewBag.Title = "TasksHome";
}


<style type="text/css">
    .right {
        float: right;
        width: 400px;
    }

    .left {
        float: left;
        width: 400px
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>Tasks</h2>
        </div>
        <div class="col-12">
            <p>Name: @Model.CurrentUser.StrName</p>
        </div>
        <div class="col-12">
            <p>Tasks to do</p>
        </div>
        <div class="col-12">
            <ul>
                @foreach (var t in Model.TasksNotYetDueForUser)
                {
                    <li>
                        @t.StrName (due @t.DtmDue) for @t.Event.StrName
                        <br />
                        @t.StrAttachment
                    </li>
                }
            </ul>
        </div>
        <div class="col-12">
            <p>Overdue Tasks</p>
        </div>
        <div class="col-12">
            <ul>
                @foreach (var t in Model.TasksOverDueForUser)
                {
                    <li>
                        <span style="color: #f00">
                            @t.StrName (due @t.DtmDue) for @t.Event.StrName
                            <br />
                            @t.StrAttachment
                        </span>
                    </li>
                }
            </ul>
        </div>
        <div class="col-12">
            <p>Tasks Assigned By You</p>
        </div>
        <div class="col-12">
            <ul>
                @foreach (var t in Model.TasksAssignedByUser)
                {
                    <li>
                        @t.StrName (due @t.DtmDue from @t.UserAssignedTo) for @t.StrName
                        <br />
                        @t.StrAttachment
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="row">
    </div>
]</div>
  

