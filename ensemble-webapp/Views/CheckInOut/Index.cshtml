@using ensemble_webapp.Database

@model ensemble_webapp.ViewModels.CheckInOutVM
@{
    ViewBag.Title = "CheckInOutHome";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2><strong>Check-In/Out</strong></h2>
            <br />
            
            @using (Html.BeginForm("ChooseEvent", "CheckInOut"))
            {
                <label for="ChosenEvent.IntEventID">Choose Event</label>
                @Html.DropDownListFor(m => m.ChosenEvent.IntEventID, new SelectList(Model.LstAdminEvents, "intEventID", "strName"), new { @class = "form-control" })
                <br />
                <input type="submit" value="choose event" class="form-control btn-primary" />
            }
        </div>
    </div>
</div>